{
  "compilerOptions": {
    "allowJs": true,
    "module": "commonjs",
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true,
    "isolatedModules": true,
    "jsx": "react-native",
    "lib": ["es2017"],
    "moduleResolution": "node",
    "noEmit": true,
    "strict": true,
    "target": "esnext",
    "rootDir": "src",
    "baseUrl": ".",
    "paths": {
      "atoms/*": ["./src/components/atoms/*"],
      "hooks/*": ["./src/hooks/*"],
      "values/*": ["./src/values/*"],
      "components/*": ["./src/components/*"],
      "navigation/*": ["./src/navigation/*"],
      "redux/*": ["./src/redux/*"]
    },
    "typeRoots": ["./src/@types", "./node_modules/@types"]
  },
  "exclude": [
    "node_modules",
    "babel.config.js",
    "metro.config.js",
    "jest.config.js"
  ]
}
